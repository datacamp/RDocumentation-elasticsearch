{
    "type" : "jdbc",
    "jdbc" : {
        "url" : "{{ .Env.DB_URL }}",
        "user" : "{{ .Env.DB_USER }}",
        "password" : "{{ .Env.DB_PASSWORD }}",
        "sql" : {
          "statement": "select p.name as _id, r.`name` = 'part_of_r' as part_of_r, s.last_month_downloads as last_month_downloads from Packages p INNER JOIN DownloadStatistics s on p.name = s.package_name INNER JOIN Repositories r on p.type_id = r.id WHERE p.updated_at > ?;",
          "parameter" : [ "$metrics.lastexecutionstart" ]
        },
        "resultset_concurrency": "CONCUR_READ_ONLY",
        "resultset_type": "TYPE_FORWARD_ONLY",
        "statefile" : "data/packages.state.json",
        "metrics" : {
          "lastexecutionstart" : "2016-07-12T13:15:00.069Z",
     	  "lastexecutionend" : "2016-07-12T13:15:00.123Z",
          "enabled" : true,
          "interval" : "1m",
          "logger" : {
              "plain" : false,
              "json" : true
          }
        },
        "threadpoolsize" : 1,
        "max_bulk_volume": "5m",
        "max_concurrrent_bulk_requests": 10,
        "index" : "rdoc_v4",
        "type": "package",
        "elasticsearch" : {
          "cluster": "rdoc",
          "host": "es",
          "port": 9300
        },
        "schedule": "0 0/10 * 1/1 * ? *"
    }
}
